<div class="container-form">
  <p id="notice"><%= notice %></p>
  <div class="float: right;">
    <%= link_to 'New Company', new_company_path, class: "button primary" %>
  </div>
  <h1 style="text-align: center; color: orange;">Companies</h1>

  <table class="unstriped hover">
    <thead>
      <tr>
        <th>Company name</th>
        <th>Street adress 1</th>
        <th>Street adress 2</th>
        <th>Postal or zipcode</th>
        <th>City</th>
        <th>Province or state</th>
        <th>Country</th>
        <th>Phone number</th>
        <th>Fax number</th>
        <th>Email</th>
        <th>Num siret</th>
        <th>Code ape</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @companies.each do |company| %>
        <tr>
          <td><%= company.company_name %></td>
          <td><%= company.street_address_1 %></td>
          <td><%= company.street_address_2 %></td>
          <td><%= company.postal_or_zipcode %></td>
          <td><%= company.city %></td>
          <td><%= company.province_or_state %></td>
          <td><%= company.country %></td>
          <td><%= company.phone_number %></td>
          <td><%= company.fax_number %></td>
          <td><%= company.email %></td>
          <td><%= company.num_siret %></td>
          <td><%= company.code_ape %></td>
          <td><%= link_to 'Visualisé', company, class: "button" %></td>
          <td><%= link_to 'Modifier', edit_company_path(company), class: "button success" %></td>
          <td><%= link_to 'Supprimer', company, class: "button alert", method: :delete, data: { confirm: 'Etes vous sur de vouloir supprimer votre société?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
</div>
