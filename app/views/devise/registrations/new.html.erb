<div class="container">
  <div class="login">
    <%= foundation_devise_error_messages! %>
    <div class="row">
      <div class="medium-10 medium-centered columns">
        <div class="login-box">
          <div class="row">
            <div class="large-12 columns">
              <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
                <div class="row">
                  <h5 class="text-center" style="padding-left: 16px;">
                    <%= t('.Inscription', :default => "Inscription Ã  Auranys Application") %>
                  </h5>
                </div>
                <div class="row">
                  <%= f.email_field :email, autofocus: true, class: "large-12 columns", placeholder: "Adrese email"%>
                </div>
                <div class="row">
                  <%= f.password_field :password, autocomplete: "off", class: "large-12 columns", placeholder: "Mot de passe"%>
                </div>
                <div class="row">
                  <%= f.password_field :password_confirmation, autocomplete: "off", class: "large-12 columns", placeholder: "Confirmation du mot passe"%>
                </div>
                <div class="row">
                  <%= f.submit t('.LANCER L\'INSCRIPTION', :default => "LANCER L'INSCRIPTION"), class: "button warning expand large-12 large-centered columns" %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <%= render "devise/shared/links" %>
</div>
